<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Scissors"
        android:id="@+id/buttonScissors"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Spock"
        android:id="@+id/buttonSpock"
        android:layout_below="@+id/buttonScissors"
        android:layout_toLeftOf="@+id/buttonScissors"
        android:layout_marginRight="5dp"
        android:layout_marginTop="25dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Paper"
        android:id="@+id/buttonPaper"
        android:layout_below="@+id/buttonScissors"
        android:layout_toRightOf="@+id/buttonScissors"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Lizard"
        android:id="@+id/buttonLizard"
        android:layout_below="@+id/buttonSpock"
        android:layout_toLeftOf="@+id/buttonScissors"
        android:layout_marginRight="-30dp"
        android:layout_marginTop="25dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Rock"
        android:id="@+id/buttonRock"
        android:layout_below="@+id/buttonPaper"
        android:layout_toRightOf="@+id/buttonScissors"
        android:layout_marginLeft="-30dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Score:"
        android:id="@+id/textCurrentScoreLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textCurrentScoreValue"
        android:layout_toRightOf="@+id/textCurrentScoreLabel"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="35dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Score:"
        android:id="@+id/textHighScoreLabel"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/buttonPaper"
        android:layout_alignEnd="@+id/buttonPaper"
        android:layout_marginTop="35dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textHighScoreValue"
        android:layout_toRightOf="@+id/textHighScoreLabel"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="35dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Your Weapon"
        android:textSize="20sp"
        android:id="@+id/textView"
        android:layout_below="@+id/textCurrentScoreLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View High Scores"
        android:id="@+id/buttonViewHighScores"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
